<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap -m-4">
      <% if logged_in? && @posts.present? %>
        <div class="flex flex-col text-center w-full mb-6">
          <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">ゴキブリ対策一覧</h1>
        </div>
        <%= render @posts %>
      <% else %>
        <%= render 'shared/repuire_login_for_posts' %>
      <% end %>
    </div>
  </div>
</section>
