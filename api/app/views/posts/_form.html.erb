<section class="text-gray-600 body-font relative">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-12">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">ゴキブリ対策投稿</h1>
    </div>
    <div class="lg:w-1/2 md:w-2/3 mx-auto">
      <%= form_with model: post, local: true do |f| %>
        <div class="flex flex-wrap -m-2">
          <div class="p-2 w-full">
            <div class="relative">
              <%= f.label :title, class: "leading-7 text-sm text-gray-600" %>
              <%= f.text_field :title, class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-yellow-500 focus:bg-white focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
            </div>
          </div>
          <div class="p-2 w-full">
            <div class="relative">
              <%= f.label :body, class: "leading-7 text-sm text-gray-600" %>
              <%= f.text_area :body, class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-yellow-500 focus:bg-white focus:ring-2 focus:ring-yellow-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out" %>
            </div>
          </div>
          <div class="p-2 w-1/2">
            <div class="relative text-center">
              <%= f.radio_button :post_types, Post.post_types.key(0), checked: "checked" %>
              <%= f.label :post_types, Post.post_types_i18n[:destruction], class: "leading-7 text-sm text-gray-600" %>
            </div>
          </div>
          <div class="p-2 w-1/2">
            <div class="relative text-center">
              <%= f.radio_button :post_types, Post.post_types.key(1) %>
              <%= f.label :post_types, Post.post_types_i18n[:prevention], class: "leading-7 text-sm text-gray-600" %>
            </div>
          </div>
          <div class="p-2 w-full">
            <div class="relative">
              <%= f.label :thumbnail %>
              <%= f.file_field :thumbnail, accept: 'image/*', onchange: 'previewImage(preview)' %>
              <%= f.hidden_field :thumbnail_cache %>
            </div>
          </div>
          <div class="p-2 w-full">
            <div class="relative">
              <%= image_tag post.thumbnail.url, id: 'preview', size: '400x300' %>
            </div>
          </div>
          <div class="p-2 w-full">
            <button class="flex mx-auto text-white bg-yellow-500 border-0 py-2 px-8 focus:outline-none hover:bg-yellow-600 rounded text-lg">
            <%= f.submit %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
