<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="w-full max-w-sm mx-auto my-8 overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
    <div class="px-6 py-4">
        <h2 class="mt-3 text-xl font-medium text-center text-gray-800 dark:text-gray-200">Goki.netへようこそ！</h2>
        <p class="mt-1 pb-4 text-center text-gray-500 dark:text-gray-400 border-b">会員登録してゴキブリを克服しましょう。</p>
        <%= form_with model: @user, local: true do |f| %>
            <div class="w-full mt-4">
                <%= f.label :name, class: 'block text-sm text-gray-800 dark:text-gray-200' %>
                <%= f.text_field :name, class: 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40' %>
            </div>
            <div class="w-full mt-4">
                <%= f.label :email, class: 'block text-sm text-gray-800 dark:text-gray-200' %>
                <%= f.email_field :email, class: 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40' %>
            </div>
            <div class="w-full mt-4">
                <%= f.label :password, class: 'block text-sm text-gray-800 dark:text-gray-200' %>
                <%= f.password_field :password, class: 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40' %>
            </div>
            <div class="w-full mt-4">
                <%= f.label :password_confirmation, class: 'block text-sm text-gray-800 dark:text-gray-200' %>
                <%= f.password_field :password_confirmation, class: 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40' %>
            </div>
            <div class="flex justify-center mt-6">
              <%= f.submit '会員登録', class: 'px-6 py-2 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-yellow-500 rounded-lg hover:bg-yellow-600 focus:outline-none focus:ring focus:ring-yellow-300 focus:ring-opacity-50'%>
            </div>
        <% end %>
    </div>

    <div class="flex items-center justify-center py-4 text-center bg-gray-50 dark:bg-gray-700">
        <span class="text-sm text-gray-600 dark:text-gray-200">すでにアカウントを持っていますか? </span>
        <%= link_to 'ログイン', login_path, class: 'mx-2 text-sm font-bold text-blue-500 dark:text-blue-400 hover:underline' %>
    </div>
</div>
  </div>
</section>
