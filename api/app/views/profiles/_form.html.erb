<%= form_with model: profile, local: true do |f| %>
  <div class="form-group">
    <%= f.label :house_age %>
    <%= f.number_field :house_age %>
  </div>
  <div class="form-group">
    <%= f.label :house_floor %>
    <%= f.number_field :house_floor %>
  </div>
  <div class="form-group">
    <%= f.radio_button :house_structure, Profile.house_structures.key(0), checked: "checked" %>
    <%= f.label :house_structure, Profile.house_structures_i18n[:wooden] %>
    <%= f.radio_button :house_structure, Profile.house_structures.key(1) %>
    <%= f.label :house_structure, Profile.house_structures_i18n[:reinforced_concrete] %>
    <%= f.radio_button :house_structure, Profile.house_structures.key(2) %>
    <%= f.label :house_structure, Profile.house_structures_i18n[:steel_frame] %>
  </div>
  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, accept: 'image/*', onchange: 'previewImage(preview)' %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <div class="mt-3 mb-3">
    <%= image_tag profile.avatar.url, id: 'preview', size: '300x200' %>
  </div>
  <%= f.submit %>
<% end %>
