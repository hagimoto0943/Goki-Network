<section class="bg-base-200 py-8 text-gray-600 body-font">
  <div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
    <% if user.profile %>
      <%= image_tag current_user.profile.avatar.url %>
    <% else %>
      <i class="fa-solid fa-user w-10 h-10 rounded-full p-4 mx-2 bg-neutral-400"></i>
    <% end %>
    <div class="text-center lg:w-2/3 w-full">
      <h1 class="title-font sm:text-4xl text-3xl mt-6 mb-4 font-medium text-gray-900"><%= user.name %></h1>
      <p class="mb-8 leading-relaxed">プロフィールを作成しましょう！</p>
      <div class="flex justify-center">
        <%= link_to new_profile_path do%>
          <button class="btn btn-primary">プロフィールを作成</button>
        <% end %>
      </div>
    </div>
  </div>
</section>
