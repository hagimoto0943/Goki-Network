<section class="bg-base-200 text-gray-600 body-font relative">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-12">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">プロフィール登録</h1>
    </div>
    <div class="lg:w-1/2 md:w-2/3 mx-auto">
      <%= form_with model: profile, local: true do |f| %>
        <div class="flex flex-wrap -m-2">
          <div class="p-2 w-1/2">
            <div class="relative">
              <%= f.label :house_floor,  class: "leading-7 text-sm text-gray-600" %>
              <%= f.number_field :house_floor, class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-yellow-500 focus:bg-white focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
            </div>
          </div>
          <div class="p-2 w-1/2">
            <div class="relative">
              <%= f.label :house_age,  class: "leading-7 text-sm text-gray-600" %>
              <%= f.number_field :house_age, class: "w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-yellow-500 focus:bg-white focus:ring-2 focus:ring-yellow-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
            </div>
          </div>
          <div class="p-2 w-1/3">
            <div class="relative text-center">
              <%= f.radio_button :house_structure, Profile.house_structures.key(0), checked: "checked" %>
              <%= f.label :house_structure, Profile.house_structures_i18n[:wooden], class: "leading-7 text-sm text-gray-600" %>
            </div>
          </div>
          <div class="p-2 w-1/3">
            <div class="relative text-center">
              <%= f.radio_button :house_structure, Profile.house_structures.key(1) %>
              <%= f.label :house_structure, Profile.house_structures_i18n[:reinforced_concrete], class: "leading-7 text-sm text-gray-600" %>
            </div>
          </div>
          <div class="p-2 w-1/3">
            <div class="relative text-center">
              <%= f.radio_button :house_structure, Profile.house_structures.key(2) %>
              <%= f.label :house_structure, Profile.house_structures_i18n[:steel_frame], class: "leading-7 text-sm text-gray-600" %>
            </div>
          </div>
          <div class="p-2 w-full">
            <div class="relative">
              <%= f.label :avatar %>
              <%= f.file_field :avatar, accept: 'image/*', onchange: 'previewImage(preview)' %>
              <%= f.hidden_field :avatar_cache %>
            </div>
          </div>
          <div class="p-2 w-full">
            <div class="relative">
              <%= image_tag profile.avatar.url, id: 'preview', size: '300x200' %>
            </div>
          </div>
          <div class="p-2 w-full">
            <button class="btn btn-primary">
              <%= f.submit %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
