<div class="navbar bg-base-100">
  <div class="navbar-start ml-4">
    <%= link_to root_path, class: "btn btn-ghost normal-case text-xl ml-2" do %>
      <%= image_tag "goki_logo.png", class: 'w-30 h-10'%>
    <% end %>
  </div>
  <div class="relative navbar-end mx-4">
    <div class="invisible md:visible absolute">
      <%= link_to t('defaults.login'), login_path, class: 'btn btn-primary mr-2' %>
      <%= link_to t('defaults.sign_in'), new_user_path, class: 'btn btn-primary' %>
    </div>
    <div class="dropdown dropdown-end absolute md:invisible">
      <label tabindex="0" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 border rounded-box w-52">
        <li><%= link_to t('defaults.login'), login_path %></li>
        <li><%= link_to t('defaults.sign_in'), new_user_path %></li>
      </ul>
    </div>
  </div>
</div>
