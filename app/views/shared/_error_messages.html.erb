<% if object.errors.any? %>
  <div class="flex p-4 mb-4 text-sm text-error-content rounded-lg bg-error" role="alert">
    <div>
      <ul class="mt-1.5 ml-4 list-disc list-inside">
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
