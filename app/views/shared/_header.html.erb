<div class="navbar bg-base-100">
  <div class="navbar-start ml-4">
    <div class="dropdown">
      <label tabindex="0" class="btn btn-xs btn-primary md:btn-md">
        害虫対策
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 border rounded-box w-52">
        <li><%= link_to t('defaults.index_post'), posts_path %></li>
        <li><%= link_to t('defaults.new_post'), new_post_path %></li>
      </ul>
    </div>
  </div>
  <div class="navbar-center">
    <%= link_to posts_path, class: "btn btn-ghost normal-case text-xl ml-2" do %>
      <%= image_tag "goki_logo.png", class: 'w-30 h-10'%>
    <% end %>
  </div>
  <div class="navbar-end mx-4">
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-full rounded-full border border-gray-400">
          <% if current_user.profile %>
            <%= image_tag current_user.profile.avatar.url %>
          <% else %>
            <i class="fa-solid fa-user w-full h-full rounded-full bg-neutral-400"></i>
          <% end %>
        </div>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 border rounded-box w-52">
        <li class = "mx-auto">
          <%= link_to current_user.name, profile_path(current_user) %>
        </li>
        <li class = "mx-auto">
          <%= link_to t('defaults.for_tools'), tools_path %>
        </li>
        <li class = "mx-auto">
          <%= button_to t('defaults.logout'), logout_path, method: :delete %>
        </li>
      </ul>
    </div>
  </div>
</div>
