<%= turbo_frame_tag fight do %>
  <% if fight.support?(current_user) %>
    <%= button_to supports_path(id: current_user.supports.find_by(fight_id: fight.id)), class: "text-yellow-500 mr-2 mt-2", method: :delete do %>
      <i class="fa-solid fa-hand fa-shake fa-xl" style="color: #ffd60a;"></i>
      <%= fight.supports.count %>
    <% end %>
  <% else %>
    <%= button_to supports_path(fight_id: fight.id), class: "text-yellow-500 mt-2 mr-2", method: :post do %>
      <i class="fa-regular fa-hand fa-xl" style="color: #ffd60a;"></i>
      <%= fight.supports.count %>
    <% end %>
  <% end %>
<% end %>
