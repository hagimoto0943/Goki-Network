<% content_for(:title, t('.title')) %>
<% if logged_in? && @fights.present? %>
    <div class="bg-base-200 py-6 sm:py-8 lg:py-12">
        <div class="mx-auto max-w-screen-xl px-4 md:px-8">
        <!-- text - start -->
            <div class="text-center mb-10 md:mb-16">
                <h1 class="sm:text-3xl text-2xl font-medium title-font my-4 text-gray-900">退治中のユーザー</h1>
            </div>
        <!-- text - end -->
            <div class="grid grid-cols-2 gap-x-4 gap-y-8 md:grid-cols-4 lg:gap-x-8 lg:gap-y-12" id = "fights">
                <%= render @fights %>
            </div>
        </div>
        <div class="join text-center my-6">
            <%= paginate @fights %>
        </div>
    </div>
<% else %>
    <%= render 'shared/repuire_login_for_fights' %>
<% end %>
