<section class="text-gray-600 bg-base-200 body-font relative">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-12">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900"><%= t 'defaults.new_post' %></h1>
    </div>
    <div class="lg:w-1/2 md:w-2/3 mx-auto">
      <%= form_with model: post, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="flex flex-wrap -m-2">
          <div class="form-control p-2 w-full">
            <div class="relative">
              <%= f.label :title, class: "label" %>
              <%= f.text_field :title, class: "input input-bordered input-accent w-full max-w-3xl focus:border-yellow-500 focus:outline-none focus:ring-6" %>
            </div>
          </div>
          <div class="form-control p-2 w-full">
            <div class="relative">
              <%= f.label :body, class: "label" %>
              <%= f.text_area :body, class: "textarea textarea-accent w-full h-32 max-w-3xl focus:border-yellow-500 focus:outline-none focus:ring-6" %>
            </div>
          </div>
          <div class="form-control p-2 w-1/2">
            <div class="relative text-center">
              <%= f.radio_button :post_types, Post.post_types.key(0), class: "radio radio-accent checked" %>
              <%= f.label :post_types, Post.post_types_i18n[:destruction], class: "leading-7 text-sm text-gray-600" %>
            </div>
          </div>
          <div class="form-control p-2 w-1/2">
            <div class="relative text-center">
              <%= f.radio_button :post_types, Post.post_types.key(1), class: "radio radio-accent" %>
              <%= f.label :post_types, Post.post_types_i18n[:prevention], class: "leading-7 text-sm text-gray-600" %>
            </div>
          </div>
          <div class="form-control p-2 w-full">
            <div class="relative">
              <%= f.label :thumbnail, class: "label" %>
              <%= f.file_field :thumbnail, accept: 'image/*', class: "file-input file-input-bordered file-input-accent w-full max-w-xs" %>
              <%= f.hidden_field :thumbnail_cache %>
            </div>
          </div>
          <div class="form-control p-2 mx-auto">
            <button class="btn btn-primary">
              <%= f.submit %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
