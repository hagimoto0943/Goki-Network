<div class="p-4 md:w-1/3 w-full">
  <%= link_to post_path(post.id) do%>
    <div class="card card-compact bg-base-100 rounded-lg mx-auto overflow-hidden">
      <figure><%= image_tag post.thumbnail.url, class: "lg:h-48 md:h-36 w-hull object-contain object-center" %></figure>
      <div class="card-body p-6">
        <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"><%= l post.created_at%></h2>
        <h1 class="card-title title-font text-lg font-medium text-gray-900 mb-3">
          <%=post.title%>
        </h1>
        <div class="card-actions justify-start">
          <% if post.post_types == "prevention" %>
            <div class="badge badge-info"><%= post.post_types_i18n %></div>
          <% else %>
            <div class="badge badge-error"><%= post.post_types_i18n %></div>
          <% end %>
          <div class="badge badge-success"><%= post.insect_types_i18n %></div>
          <div class="badge badge-secondary"><%= post.places_i18n %></div>
        </div>
        <div class="card-actions justify-between">
          <div class="badge badge-lg badge-outline badge-accent"><%=post.user.name%></div>
          <%= render 'like_button', post: post%>
        </div>
      </div>
    </div>
  <% end %>
</div>
